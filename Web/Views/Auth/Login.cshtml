@model Web.ViewModels.Auth.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<form asp-controller="Auth" asp-action="Login" method="POST">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group d-flex flex-column">
        <label asp-for="LicensePlate"></label>
        <input asp-for="LicensePlate" class="form-control">
        <span asp-validation-for="LicensePlate" class="text-danger"></span>
    </div>
    <div class="form-group d-flex flex-column">
        <label asp-for="SecretCode"></label>
        <input asp-for="SecretCode" class="form-control">
        <span asp-validation-for="SecretCode" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>